<head>
  <style>
      .verticalLine {
          border-left: 2px solid #404040;
          height: 38px;
          position:absolute;
          left: 84%;
      }
  </style>
</head>

<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (user) { %>
      <h6><b>Logged in as: <%= user.email %></b></h6>
      <p style="padding: 0 2em 1em 0"></p>
      <a href="/logout"><button type="button" class="btn btn-outline-dark" style="height: 38px">Logout</button></a>
      <p style="padding: 0 2em 2em 0"></p>

    <% } else { %>
      <a href="/login" style="padding: 0 2em 0 0; color:#404040"><b>Sign In</b></a>
      <div class="verticalLine" style="padding: 0 1em 1em 0"></div>
      <p style="padding: 0 2em 2em 0"></p>
      <a href="/register"><button type="button" class="btn btn-dark">Register</button></a>
      <p style="padding: 0 2em 2em 0"></p>
    <% } %>
  </nav>
</header>
